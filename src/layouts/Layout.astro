---
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "Nero Caffe - A prémium kávéélmény az Ön városában.",
} = Astro.props;
---

<!doctype html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
